{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "vite-env.d.ts",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".spark.tmp",
    "src/debugger/**",
    "src/test-safe.ts"
  ]
}